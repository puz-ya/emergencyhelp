<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:key="bootload"
        android:title="@string/settings_bootload"
        android:defaultValue="true"
        />

        <EditTextPreference
            android:key="alarm_time"
            android:title="@string/settings_alarm_time"
            android:defaultValue="30"
            android:selectAllOnFocus="true"
            android:inputType="numberSigned" />

        <!-- defaultValue==3 or 5 - are norm to throw on the pillow -->
        <EditTextPreference
            android:key="alarm_sensitive"
            android:title="@string/settings_sensor_sensitivity"
            android:defaultValue="3"
            android:selectAllOnFocus="true"
            android:inputType="numberSigned" />
</PreferenceScreen>